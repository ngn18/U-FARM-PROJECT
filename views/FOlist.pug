extends layout
block content
    header.card-header
        h4.card-title List of Farmer ones
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
        a#nav-profile-tab.nav-item.nav-link(href='/registerFarmerOne') Register FarmerOne
    #nav-tabContent.tab-content
    br
    table.table.table-bordered 
        thead
            tr
                th Unique Number 
                th Ward
                th First Name
                th Last Name
                th Date of Birth
                th Gender 
                th NIN
                th Phone Number 
                th Activity 
                th Date of Registration 
                th Directions 
                th Residence type 
                th Years of Residence in Ward
                th Role 
                th Update
                th Delete
        tbody
            if farmerones.length
                each farmerone in farmerones
                    tr
                        td #{farmerone.uniquenumber}
                        td #{farmerone.ward}
                        td #{farmerone.firstname}
                        td #{farmerone.lastname}
                        td #{farmerone.dateofbirth}
                        td #{farmerone.gender}
                        td #{farmerone.nin}
                        td #{farmerone.telephone}
                        td #{farmerone.activity}
                        td #{farmerone.regdate}
                        td #{farmerone.directions}
                        td #{farmerone.residence}
                        td #{farmerone.yearsofresidence}
                        td #{farmerone.role}
                        //- td #{moment(us
                        td
                            a
                                button.btn.btn-primary.btn-block(href='/farmerOne/update/'+farmerone._id) Update
                        td
                            form(method="post" action='/farmerOne/delete')
                                input(type="hidden", placeholder="", name="id", value=farmerone._id)
                                button.btn.btn-danger.btn-block(type="submit") Delete
    div.form-row
        div.col.form-group
            a(class='button', href='/agricOfficerDash') Back
    
