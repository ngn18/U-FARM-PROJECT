doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/css/bootstrapcss/bootstrap.css')
  link(rel='stylesheet' href='/css/aofficer.css')
  title Agricultural Officer Dashboard
nav.navbar.bg-light.fixed-top
  .container-fluid
    a.navbar-brand(href='#') Agricultural Officer Dash Board
    a.navbar-brand(href='#')
      img(src='/Images/U+FARM+Logo.png' width='120px' style='margin-left: 1100px;')
    button.navbar-toggler(type='button' data-bs-toggle='offcanvas' data-bs-target='#offcanvasNavbar' aria-controls='offcanvasNavbar')
      span.navbar-toggler-icon
    #offcanvasNavbar.offcanvas.offcanvas-end(tabindex='-1' aria-labelledby='offcanvasNavbarLabel')
      .offcanvas-header(style='background-color: green;')
        h3#offcanvasNavbarLabel.offcanvas-title
          img(src='/Images/U+FARM+Logo.png' width='200px')
        button.btn-close(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
      .offcanvas-body
        ul.navbar-nav.justify-content-end.flex-grow-1.pe-3
          li.nav-item
            a.nav-link(aria-current='page' href='aodashboard') HOME 
          li.nav-item
            a.nav-link(aria-current='page' href='foregister') FARMER ONE REGISTRATION
          li.nav-item
            a.nav-link(href='FarmerOneList') VIEW FARMER ONE LIST
          li.nav-item
            a.nav-link(href='FarmerOneList') UPDATE FARMER ONE DETAILS
          li.nav-item
            form(method='post' action='/logout')
              button.btn.btn-primary(type='submit') Log out
h4.card-title(style='margin-top: 100px;') List of Farmer ones
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
    #nav-tabContent.tab-content
    br
    table.table.table-bordered 
        thead
            tr
                th Unique Number 
                th Ward
                th First Name
                th Last Name
                th Date of Birth
                th Gender 
                th NIN
                th Phone Number 
                th Activity 
                th Date of Registration 
                th Directions 
                th Residence type 
                th Years of Residence in Ward
                th Role 
                th Update
                //- th Delete
        tbody
            if farmerones.length
                each farmerone in farmerones
                    tr
                        td #{farmerone.uniquenumber}
                        td #{farmerone.ward}
                        td #{farmerone.firstname}
                        td #{farmerone.lastname}
                        td #{farmerone.dateofbirth}
                        td #{farmerone.gender}
                        td #{farmerone.nin}
                        td #{farmerone.telephone}
                        td #{farmerone.activity}
                        td #{farmerone.regdate}
                        td #{farmerone.directions}
                        td #{farmerone.residence}
                        td #{farmerone.yearsofresidence}
                        td #{farmerone.role}
                        //- td #{moment(us
                        td
                            a.btn.btn-primary.btn-block(href='/farmerone/update/'+farmerone._id) Update
