extends layout
block content
    header.card-header
        h4.card-title List of Products
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
        //- a#nav-profile-tab.nav-item.nav-link(href='/foregister') Register FarmerOne
    #nav-tabContent.tab-content
    br
    table.table.table-bordered 
        thead
            tr
                th Product Category
                th Produce Name
                th Quantity
                th Price
                th Mode of Delivery
                th Mode of Payment
                th Date of Upload
                th Status
                th Availability
                th Image 
                th Update
                th Delete
        tbody
            if products.length
                each product in products
                  if product.status == 'Pending'
                    tr
                        td #{product.productcategory}
                        td #{product.producename}
                        td #{product.quantity}
                        td #{product.price}
                        td #{product.modeofdelivery}
                        td #{product.modeofpayment}
                        td #{product.dateofupload}
                        td #{product.status}
                        td #{product.availability}
                        td 
                            img(src="/"+product.image, alt="Image" width='150px' height="150px")
                        //- td #{moment(us
                        td
                            a
                                button.btn.btn-primary.btn-block(href='/produce/update/'+product._id) Update
                        td
                            form(method="post" action='/produce/delete')
                                input(type="hidden" placeholder="" name="id", value=product._id)
                                button.btn.btn-danger.btn-block(type="submit") Delete
    div.form-row
        div.col.form-group
            a(class='button' href='/agricOfficerDash') Back

