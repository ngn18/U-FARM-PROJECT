doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/css/bootstrapcss/bootstrap.css')
  link(rel='stylesheet' href='/css/aofficer.css')
  title Agricultural Officer Dashboard
nav.navbar.bg-light.fixed-top
  .container-fluid
    a.navbar-brand(href='#') Urban Farmer DashBoard
    a.navbar-brand(href='#')
      img(src='/Images/U+FARM+Logo.png' width='120px' style='margin-left: 1100px;')
    button.navbar-toggler(type='button' data-bs-toggle='offcanvas' data-bs-target='#offcanvasNavbar' aria-controls='offcanvasNavbar')
      span.navbar-toggler-icon
    #offcanvasNavbar.offcanvas.offcanvas-end(tabindex='-1' aria-labelledby='offcanvasNavbarLabel')
      .offcanvas-header(style='background-color: green;')
        h3#offcanvasNavbarLabel.offcanvas-title
          img(src='/Images/U+FARM+Logo.png' width='200px')
        button.btn-close(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
      .offcanvas-body
        ul.navbar-nav.justify-content-end.flex-grow-1.pe-3.sidebar
          li.nav-item
            a.nav-link(aria-current='page' href='ufdashboard') HOME 
          li.nav-item
            a.nav-link(aria-current='page' href='produceupload') UPLOAD YOUR PRODUCTS
          li.nav-item
            a.nav-link(href='#') PRODUCT LIST
          li.nav-item
            a.nav-link(href='#') UPDATE/ DELETE PRODUCTS
          li.nav-item
            form(method='post' action='/logout')
              button.btn.btn-primary.sidebtn(type='submit') Log out
h4.card-title(style='margin-top: 100px;') List of Products
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
    #nav-tabContent.tab-content 
    br
    table.table.table-bordered 
        thead
            tr
                th Product Category
                th Produce Name
                th Quantity
                th Price
                th Mode of Delivery
                th Mode of Payment
                th Date of Upload
                th Status
                th Availability
                th Image 
                th Update
                th Delete
        tbody
            if products.length
                each product in products
                    tr
                        td #{product.productcategory}
                        td #{product.producename}
                        td #{product.quantity}
                        td #{product.price}
                        td #{product.modeofdelivery}
                        td #{product.modeofpayment}
                        td #{product.dateofupload}
                        td #{product.status}
                        td #{product.availability}
                        td 
                            img(src="/"+product.image, alt="Image" width='150px' height="150px")
                        //- td #{moment(us
                        td
                            a.btn.btn-primary.btn-block(href='/produce/update/'+product._id) Update
                        td
                            form(method="post" action='/produce/delete')
                                input(type="hidden" placeholder="" name="id", value=product._id)
                                button.btn.btn-danger.btn-block(type="submit") Delete
    div.form-row
        div.col.form-group
            a(class='button' href='/agricOfficerDash') Back
script(src='/js/bootstrapjs/bootstrap.bundle.js')

